{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "max-classes-per-file": false,
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "^import |^export {(.*?)}|class [a-zA-Z]+ implements |//"
      }
    ],
    "no-empty": false,
    "object-literal-sort-keys": false,
    "object-literal-key-quotes": false,
    "no-console": false,
    "ordered-imports": false,
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ],
    "interface-name": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "no-unused-expression": false
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "dist/**"
    ]
  }
}
